{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "pretty": true,
    "lib": ["esnext"]
  },
  "include": ["src/**/*", "test/**/*"]
}
